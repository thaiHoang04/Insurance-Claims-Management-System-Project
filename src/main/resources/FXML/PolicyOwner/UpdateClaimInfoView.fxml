<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="760.0" prefWidth="527.0" styleClass="content_container" stylesheets="@../../Styles/AddNewClaim.css"
            xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1">
    <VBox prefHeight="760.0" prefWidth="527.0" spacing="10.0">
        <StackPane prefHeight="105.0" prefWidth="507.0" styleClass="title_container" stylesheets="@../../Styles/AddNewPolicyHolder.css">
            <VBox.margin>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </VBox.margin>
            <VBox prefHeight="102.0" prefWidth="507.0" styleClass="title" stylesheets="@../../Styles/AddNewPolicyHolder.css">
                <StackPane prefHeight="59.0" prefWidth="507.0">
                    <Label text="UPDATE CLAIM INFORMATION" textFill="WHITE">
                        <font>
                            <Font size="36.0" />
                        </font>
                    </Label>
                </StackPane>
                <StackPane prefHeight="55.0" prefWidth="507.0">
                    <Label text="Please enter your information to update" textFill="WHITE">
                        <font>
                            <Font size="18.0" />
                        </font>
                    </Label>
                </StackPane>
            </VBox>
        </StackPane>
        <HBox layoutX="10.0" layoutY="145.0" prefHeight="51.0" prefWidth="527.0">
            <StackPane prefHeight="150.0" prefWidth="200.0">
                <Label text="Insured person:" />
            </StackPane>
            <StackPane prefHeight="100.0" prefWidth="422.0">
                <TextField fx:id="insuredPersonTxtField" disable="true" />
            </StackPane>
        </HBox>
        <HBox layoutX="10.0" layoutY="593.0" prefHeight="51.0" prefWidth="527.0">
            <StackPane prefHeight="150.0" prefWidth="200.0">
                <Label text="Insurance Card:" />
            </StackPane>
            <StackPane prefHeight="100.0" prefWidth="422.0">
                <TextField fx:id="insuranceCardNumTxtField" disable="true" />
            </StackPane>
        </HBox>
        <HBox layoutX="10.0" layoutY="654.0" prefHeight="51.0" prefWidth="527.0">
            <StackPane prefHeight="150.0" prefWidth="200.0">
                <Label text="Status:" />
            </StackPane>
            <StackPane prefHeight="100.0" prefWidth="422.0">
                <TextField fx:id="statusTxtField" disable="true" />
            </StackPane>
        </HBox>
        <HBox prefHeight="51.0" prefWidth="527.0">
            <StackPane prefHeight="150.0" prefWidth="200.0">
                <Label text="Claim date:" />
            </StackPane>
            <StackPane prefHeight="100.0" prefWidth="422.0">
                <DatePicker fx:id="claimDatePicker" prefHeight="39.0" prefWidth="246.0" stylesheets="@../../Styles/AddNewClaim.css" />
            </StackPane>
        </HBox>
        <HBox layoutX="10.0" layoutY="180.0" prefHeight="51.0" prefWidth="527.0">
            <StackPane prefHeight="150.0" prefWidth="200.0">
                <Label text="Exam date:" />
            </StackPane>
            <StackPane prefHeight="100.0" prefWidth="422.0">
                <DatePicker fx:id="examDatePicker" prefHeight="42.0" prefWidth="251.0" stylesheets="@../../Styles/AddNewClaim.css" />
            </StackPane>
        </HBox>
        <HBox layoutX="10.0" layoutY="180.0" prefHeight="51.0" prefWidth="527.0">
            <StackPane prefHeight="150.0" prefWidth="200.0">
                <Label text="Claim amount:" />
            </StackPane>
            <StackPane prefHeight="100.0" prefWidth="422.0">
                <Spinner fx:id="claimAmountSpinner" prefHeight="39.0" prefWidth="255.0" />
            </StackPane>
        </HBox>
        <HBox layoutX="10.0" layoutY="267.0" prefHeight="51.0" prefWidth="527.0">
            <StackPane prefHeight="150.0" prefWidth="200.0">
                <Label text="Bank Name:" />
            </StackPane>
            <StackPane prefHeight="100.0" prefWidth="422.0">
                <TextField fx:id="bankNameTxtField" />
            </StackPane>
        </HBox>
        <HBox layoutX="10.0" layoutY="724.0" prefHeight="51.0" prefWidth="527.0">
            <StackPane prefHeight="150.0" prefWidth="200.0">
                <Label text="Bank Number:" />
            </StackPane>
            <StackPane prefHeight="100.0" prefWidth="422.0">
                <TextField fx:id="bankNumTxtField" />
            </StackPane>
        </HBox>
        <HBox layoutX="10.0" layoutY="282.0" prefHeight="136.0" prefWidth="527.0">
            <StackPane prefHeight="150.0" prefWidth="200.0">
                <Label text="Uploaded document:" />
            </StackPane>
         <VBox fx:id="fileListContainer" prefHeight="125.0" prefWidth="365.0" />
            <StackPane prefHeight="136.0" prefWidth="93.0">
                <Button fx:id="importBtn" mnemonicParsing="false" stylesheets="@../../Styles/AddNewClaim.css">
                    <graphic>
                        <FontAwesomeIconView glyphName="UPLOAD" size="20" />
                    </graphic>
                </Button>
            </StackPane>
        </HBox>
        <StackPane prefHeight="109.0" prefWidth="527.0">
            <Button fx:id="updateBtn" mnemonicParsing="false" prefHeight="62.0" prefWidth="130.0" styleClass="saveBtn" stylesheets="@../../Styles/AddNewClaim.css" text="Update" />
        </StackPane>
    </VBox>
</AnchorPane>
